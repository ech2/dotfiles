  # Apps {{
    #bindsym $mod+Escape exec --no-startup-id dmenu_recency
    bindsym $mod+Escape exec rofi -show run

    bindsym $mod+Return exec st
    bindsym $mod+Ctrl+m exec pavucontrol
    bindsym $mod+r exec st -c st -n floating -g 100x24 -e 'ranger' 

    bindsym $mod+c exec emacsclient -a "" -c "$@"
    bindsym $mod+t exec emacsclient -a "" -c "~/workspace/notes/todo.org"
    bindsym $mod+n exec emacsclient -a "" -c "~/workspace/notes/notes.org"
    bindsym $mod+i exec emacsclient -a "" -c "~/workspace/notes/info.org"

    #bindsym $mod+i [instance="ipy_pad"] scratchpad show; move position center

    bindsym Print exec --no-startup-id scrot -d
    bindsym $mod+Print --release exec --no-startup-id scrot -s
